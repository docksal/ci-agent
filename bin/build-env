#!/usr/bin/env bash

# This script configures the pipelines build agent.

# Configuring environment variables
export BRANCH_NAME_SAFE="$(echo $BITBUCKET_BRANCH | sed -e 's/[^A-Za-z0-9]/-/g' | awk '{print tolower($0)}')"
export REMOTE_BUILD_DIR="/home/ubuntu/builds/$BITBUCKET_REPO_SLUG-$BRANCH_NAME_SAFE"
export COMPOSE_PROJECT_NAME="$BITBUCKET_REPO_SLUG-$BRANCH_NAME_SAFE"
# Use DOCKER_HOST (domain name) if set, otherwise use DOCKER_HOST_IP (IP) with xip.io
if [[ $DOCKER_HOST != "" ]]; then
	export DOCKSAL_HOST="$DOCKER_HOST"
else
	export DOCKSAL_HOST="$DOCKER_HOST_IP.xip.io"
fi
export DOMAIN="$BRANCH_NAME_SAFE.$BITBUCKET_REPO_SLUG.$DOCKSAL_HOST"

echo "Configuring ssh access..."
(umask  077 ; echo "$CI_SSH_KEY" | base64 -d > $HOME/.ssh/id_rsa)
(umask  077 ; echo "$DOCKER_HOST_SSH_KEY" | base64 -d > $HOME/.ssh/docker_host_id_rsa)
# Use DOCKER_HOST (domain name) if set, otherwise use DOCKER_HOST_IP (IP)
if [[ $DOCKER_HOST != "" ]]; then
    sed -i "s/DOCKER_HOST/$DOCKER_HOST/g" $HOME/.ssh/config
else
    sed -i "s/DOCKER_HOST/$DOCKER_HOST_IP/g" $HOME/.ssh/config
fi

# Configure git
git config --global user.email "${CI_GIT_USER_EMAIL:-bitbucket-pipelines-agent@docksal.io}"
git config --global user.name "${CI_GIT_USER_NAME:-Bitbucket Pipelines Agent}"
